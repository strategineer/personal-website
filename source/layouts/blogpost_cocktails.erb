<% wrap_layout :layout do %>
  <div class="cocktails-content container">
    <%= page_title(current_page.data.title, false, blog.articles) %>
    <%= page_links(current_page) %>
    <%= page_tags(current_page) %>
    <%= try_page_video(current_article) %>
    <%= try_page_images(current_article, true) %>
    <% unless current_page.data.blurb.nil? %>
      <div class="d-flex justify-content-center">
        <%= current_page.data.blurb %>
      </div>
    <% end %>
    <% has_any_ingredients = !current_page.data.ingredients.nil? and current_page.data.ingredients.length > 0 %>
    <% if has_any_ingredients %>
        <div class="d-flex justify-content-center">
          <h2>Ingredients</h2>
        </div>
        <div class="d-flex justify-content-center">
          <ul>
            <% current_page.data.ingredients.each do |i| %>
              <li><%= prettify_cocktail_text(current_page, i) %></li>
            <% end %>
          </ul>
        </div>
    <% end %>
    <% has_any_steps = !current_page.data.steps.nil? and current_page.data.steps.length > 0 %>
    <% if has_any_steps %>
        <div class="d-flex justify-content-center">
          <h2>Steps</h2>
        </div>
        <div class="d-flex justify-content-center">
          <ol>
            <% current_page.data.steps.each do |i| %>
              <li><%= prettify_cocktail_text(current_page, i) %></li>
            <% end %>
          </ol>
        </div>
    <% end %>
    <%= page_cocktail_legend(current_page) %>
    <% has_any_notes = !current_page.data.notes.nil? and current_page.data.notes.length > 0 %>
    <% if has_any_notes %>
        <div class="d-flex justify-content-center">
          <h2>Notes</h2>
        </div>
        <div class="d-flex justify-content-center">
          <ul>
            <% current_page.data.notes.each do |i| %>
              <li><%= prettify_cocktail_text(current_page, i) %></li>
            <% end %>
          </ul>
        </div>
    <% end %>
    <% unless current_page.data.inspired_by.nil? %>
      <div class="d-flex justify-content-center">
        Inspired by: <%= current_page.data.inspired_by %>
      </div>
    <% end %>
    <div class="row justify-content-center">
      <%= yield %>
    </div>
    <%= partial "footer_desktop" %>
  </div>
<% end %>
