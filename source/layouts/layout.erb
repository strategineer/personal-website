<!doctype html>
<html>
  <head>
    <script>
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());

      gtag('config', 'UA-139862229-1');
    </script>
    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title><%= if current_article.nil? then 'Strategineer' else current_article.title end %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.6.1/font/bootstrap-icons.css">

    <link rel="alternate" href="//strategineer.com/feed.rss" type="application/rss+xml" title="Strategineer's Blog" />

    <!-- favicon stuff -->
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png">
    <link rel="manifest" href="/site.webmanifest">
    <link rel="mask-icon" href="/safari-pinned-tab.svg" color="#5bbad5">
    <meta name="msapplication-TileColor" content="#da532c">
    <meta name="theme-color" content="#ffffff">

    <%= stylesheet_link_tag "stylesheets/site" %>
    <%= stylesheet_link_tag "stylesheets/highlighting" %>
    <%= yield_content :head %>
  </head>
  <body id="documentTop" class="<%= page_classes %>">
    <div class="container">
      <% should_have_footer = should_have_footer?(current_page) %>
      <% should_have_header = should_have_header?(current_page) %>
      <% should_have_readable = should_have_readable?(current_page) %>
      <div class="row justify-content-end">
        <div class="<%= should_have_footer ? "col-xl-8" : "col-xl-12" %> main ">
          <% if should_have_header %>
            <%= partial "header" %>
          <% end %>
          <% if should_have_readable %>
            <div class="readable">
          <% end %>
            <%= yield %>
          <% if should_have_readable %>
            </div>
          <% end %>
        </div>
        <% if should_have_footer %>
          <div class="col-xl-4 readable-footer">
            <%= partial "footer" %>
          </div>
        <% end %>
      </div>
    </div>
    <% should_have_meditation = should_have_meditation?(current_page) %>
    <% if not should_have_meditation %>
      <%= partial "to_top" %>
    <% end %>
    <%= javascript_include_tag "site" %>
    <% if should_have_meditation %>
      <%= javascript_include_tag "meditation" %>
    <% end %>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
  </body>
</html>
