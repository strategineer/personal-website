<% d = data[data_key][lang] %>
<% my_tags = data[data_key]["tags"] %>
<a class="cv-anchor" id="<%= lang %>"></a>
<div class="cv">
  <div class="d-flex justify-content-center cv-download-link">
     <a href="./cv/cv.pdf" download="bill_christian_tyros_cv.pdf">
       Download CV as a PDF!
     </a>
  </div>
  <div class="d-flex justify-content-center cv-name">
    <div class="col-12 text-center display-6">
      <%= d.name %>.<%= d.title %>
    </div>
  </div>
  <div class="row text-center cv-email">
    <ul class="list-inline">
      <li class="list-inline-item">
       <a href="mailto:me@strategineer.com">me@strategineer.com</a>
      </li>
      <li class="list-inline-item">
       <a href="https://github.com/strategineer/">github.com/strategineer</a>
      </li>
    </ul>
  </div>
  <div class="row justify-content-center cv-content cv-readable">
    <div class="col-12 text-center cv-header">
      <div class="d-flex">
      <% d.sidebar_section.each do |v| %>
        <div class="col">
          <div class="row cv-header-section text-center">
            <ul class="list-inline">
            <% v.list.each do |e| %>
              <li class="cv-header-item list-inline-item">
                <% if my_tags.include?(e) %>
                  <a href="<%= my_tags[e] %>"><%= e %><a/>
                <% else %>
                  <%= e %>
                <% end %>
              </li>
            <% end %>
            </ul>
          </div>
        </div>
      <% end %>
      </div>
    </div>
    <div class="col-12 cv-main">
      <% d.main_section.each do |v| %>
        <div class="col-12 cv-main-section">
          <div class="cv-main-title"><%= v.title %></div>
          <% v.list.each do |e| %>
            <div class="col-12 cv-main-entry">
              <div class="row cv-main-entry-header">
                <% has_link = (not e.link.nil?) %>
                <% if has_link %>
                  <a href="<%= e.link %>">
                <% end %>
                <div class="col text-left">
                  <div class="cv-main-entry-title">
                  <% unless e.year.nil? %>
                  <%= e.year %>
                  <% end %>
                  <% unless e.year.nil? and e.hint.nil? %>
                    /
                  <% end %>
                  <%= e.title %>
                  <% unless e.hint.nil? %>
                  (<%= e.hint %>)
                  <% end %>
                  </div>
                </div>
                <% if has_link %>
                  </a>
                <% end %>
                <% if defined? e.tech %>
                <div class="col text-center">
                  <div class="d-flex justify-content-center cv-main-entry-tech">
                    <ul class="list-inline">
                    <% e.tech.each do |t| %>
                      <li class="cv-tech-item list-inline-item">
                      <% if my_tags.include?(t) %>
                        <a href="<%= my_tags[t] %>"><%= t %><a/>
                      <% else %>
                        <%= t %>
                      <% end %>
                      </li>
                    <% end %>
                    </ul>
                  </div>
                </div>
                <% end %>
              </div>
              <% if defined? e.list %>
              <div class="d-flex justify-content-left cv-main-entry-bullets">
                <ul>
                <% e.list.each do |b| %>
                  <li class="cv-bullet-item"><%= b %></li>
                <% end %>
                </ul>
              </div>
              <% end %>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>
