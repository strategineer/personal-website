<% blog_id = ""%>
<% blog_name = ""%>
<% blog_archive = ""%>
<% is_home = current_page.destination_path.start_with?("index.html") %>
<% is_blog = current_page.destination_path.start_with?("blog") %>
<% is_project = current_page.destination_path.start_with?("projects") %>
<% is_review = current_page.destination_path.start_with?("reviews") %>
<% is_portfolio = current_page.destination_path.start_with?("portfolio") %>
<% is_food = current_page.destination_path.start_with?("food") %>
<% is_cocktails = current_page.destination_path.start_with?("cocktails") %>
<% if is_blog %>
  <% blog_id = "blog" %>
  <% blog_name = "blog posts" %>
  <% blog_archive = "/" %>
  <% is_main_page = false %>
<% elsif is_home or is_portfolio %>
  <% blog_id = "blog" %>
  <% blog_name = "blog posts" %>
  <% blog_archive = "/" %>
  <% is_main_page = true %>
<% elsif is_project %>
  <% blog_id = "projects" %>
  <% blog_name = "projects" %>
  <% blog_archive = "/projects/" %>
  <% is_main_page = current_page.destination_path.end_with?("projects/index.html") %>
<% elsif is_review %>
  <% blog_id = "reviews" %>
  <% blog_name = "reviews" %>
  <% blog_archive = "/reviews/" %>
  <% is_main_page = current_page.destination_path.end_with?("reviews/index.html") %>
<% elsif is_food %>
  <% blog_id = "food" %>
  <% blog_name = "recipes" %>
  <% blog_archive = "/food/" %>
  <% is_main_page = current_page.destination_path.end_with?("food/index.html") %>
<% elsif is_cocktails %>
  <% blog_id = "cocktails" %>
  <% blog_name = "cocktails" %>
  <% blog_archive = "/cocktails/" %>
  <% is_main_page = current_page.destination_path.end_with?("cocktails/index.html") %>
<% end %>
<%= menu_buttons(is_main_page, blog.articles) %>
<% ls = get_articles_shortlist(10, blog_id) %>
<% if ls[0].length() > 0 %>
<div class="d-flex justify-content-center footer-shortlist-title">
  <h4>Recent <%= blog_name %>:</h4>
</div>
<div class="footer-shortlist-parent">
  <ul class="footer-shortlist-list">
    <% ls[0].each do |article| %>
      <a href="<%= article.url %>">

        <li class="footer-shortlist-item"> <%= if has_audio?(article) then "ðŸŽ§" else "" end + article.title %></li>
      </a>
    <% end %>
    <% if ls[1] > 0 %>
      <li class="footer-shortlist-archive"><a href="<%= blog_archive %>">... with <%= ls[1] %> more <%= blog_name %> in the archive</a>.</li>
    <% end %>
  </ul>
</div>
<% end %>
